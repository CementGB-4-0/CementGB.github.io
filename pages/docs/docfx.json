{
  "metadata": [
    {
      "src": [
        {
          "src": "src/",
          "files": [
            "**/*.xml"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Cement",
      "_appTitle": "Cement",
      "_appFaviconPath": "images/favicon.ico",
      "_appLogoPath": "images/favicon_small.png",
      "_enableNewTab": true,
      "_enableSearch": true,
      "_disableToc": false,
      "pdf": false
    }
  }
}